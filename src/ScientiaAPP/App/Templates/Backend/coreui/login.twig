<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="robots" content="noindex, nofollow" />
    <title>Login | {{ app_name }} {{ app_version }}</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!-- favicon
    ============================================ -->
    <link rel="apple-touch-icon" sizes="57x57" href="{{ base_url }}assets/icon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="{{ base_url }}assets/icon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="{{ base_url }}assets/icon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="{{ base_url }}assets/icon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="{{ base_url }}assets/icon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ base_url }}assets/icon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="{{ base_url }}assets/icon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ base_url }}assets/icon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ base_url }}assets/icon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="{{ base_url }}assets/icon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ base_url }}assets/icon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="{{ base_url }}assets/icon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ base_url }}assets/icon/favicon-16x16.png">
    <link rel="manifest" href="{{ base_url }}assets/icon/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="{{ base_url }}assets/icon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <link href="{{ base_url }}assets/templates/coreui/node_modules/@coreui/icons/css/coreui-icons.min.css" rel="stylesheet">
    <link href="{{ base_url }}assets/templates/coreui/node_modules/flag-icon-css/css/flag-icon.min.css" rel="stylesheet">
    <link href="{{ base_url }}assets/templates/coreui/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="{{ base_url }}assets/templates/coreui/node_modules/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">

    <!-- PNotify -->
    <link rel="stylesheet" href="{{ base_url }}assets/vendor/pnotify/dist/pnotify.css" />
    <link rel="stylesheet" href="{{ base_url }}assets/vendor/pnotify/dist/pnotify.buttons.css" />
    <link rel="stylesheet" href="{{ base_url }}assets/vendor/pnotify/dist/pnotify.nonblock.css" />

    <!-- Main styles for this application-->
    <link href="{{ base_url }}assets/templates/coreui/css/style.css" rel="stylesheet">

    <script src="{{ base_url }}assets/templates/coreui/node_modules/jquery/dist/jquery.min.js"></script>
    {% if mode == 'development' %}
    <script src="{{ base_url }}assets/scripts/base/sc_function.js?v={{jsver}}"></script>
    {% elseif mode == 'production' %}
    <script src="{{ base_url }}assets/scripts/base/sc_function.min.js"></script>
    {% endif %}
    <script>
        var SiteRoot = "{{ base_url ~ api_path }}/";
        var API_TOKEN = "{{ api_token }}";
        if (getKen = get_token(API_TOKEN)) {
            if (getKen.length > 5) {
                window.location.replace('./home');
            }
        }
    </script>
</head>

<body class="app flex-row align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group">
                    <div class="card p-4">
                        <div class="card-body">
                            <h1>Login</h1>
                            <p class="text-muted">Sign In to your account</p>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-user"></i>
                                    </span>
                                </div>
                                <input type="text" name="tx_username" class="form-control" id="tx_username"
                                    autocomplete="username" placeholder="Username">
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                <input name="tx_password" type="password" class="form-control" id="tx_password"
                                    autocomplete="current-password" placeholder="Password">
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <button id="bt_login" class="btn btn-primary px-4" type="button">
                                        <span id="tx_spin">LOGIN</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                        <div class="card-body text-center">
                            <div>
                                <h2>Sign up</h2>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                                    incididunt ut labore et dolore magna aliqua.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- CoreUI and necessary plugins-->
    <script src="{{ base_url }}assets/templates/coreui/node_modules/popper.js/dist/umd/popper.min.js"></script>
    <script src="{{ base_url }}assets/templates/coreui/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="{{ base_url }}assets/templates/coreui/node_modules/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
    <script src="{{ base_url }}assets/templates/coreui/node_modules/@coreui/coreui/dist/js/coreui.min.js"></script>
    <script src="{{ base_url }}assets/vendor/pnotify/dist/pnotify.js"></script>
    <script src="{{ base_url }}assets/vendor/pnotify/dist/pnotify.buttons.js"></script>
    <script src="{{ base_url }}assets/vendor/pnotify/dist/pnotify.nonblock.js"></script>
    {% if mode == 'development' %}
    <script src="{{ base_url }}assets/scripts/base/sc_function.js?v={{jsver}}"></script>
    {% elseif mode == 'production' %}
    <script src="{{ base_url }}assets/scripts/base/sc_function.min.js"></script>
    {% endif %}
    {% if mode == 'development' %}
    <script src="{{ base_url }}assets/scripts/page/login.js?v={{jsver}}"></script>
    {% elseif mode == 'production'%}
    <script src="{{ base_url }}assets/scripts/page/login.min.js"></script>
    {% endif %}
</body>

</html>
