<!doctype html>
<html lang="en" class="fullscreen-bg">
<head>
    <meta name="robots" content="noindex, nofollow" />
    <title>Login | {{ app_name }} {{ app_version }}</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <!-- favicon
    ============================================ -->
    <link rel="apple-touch-icon" sizes="57x57" href="{{ base_url }}assets/notika/icon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="{{ base_url }}assets/notika/icon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="{{ base_url }}assets/notika/icon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="{{ base_url }}assets/notika/icon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="{{ base_url }}assets/notika/icon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ base_url }}assets/notika/icon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="{{ base_url }}assets/notika/icon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ base_url }}assets/notika/icon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ base_url }}assets/notika/icon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="{{ base_url }}assets/notika/icon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ base_url }}assets/notika/icon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="{{ base_url }}assets/notika/icon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ base_url }}assets/notika/icon/favicon-16x16.png">
    <link rel="manifest" href="{{ base_url }}assets/notika/icon/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="{{ base_url }}assets/notika/icon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="{{ base_url }}assets/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="{{ base_url }}assets/vendor/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="{{ base_url }}assets/vendor/linearicons/style.css" />
    <!-- PNotify -->
    <link rel="stylesheet" href="{{ base_url }}assets/vendor/pnotify/dist/pnotify.css" />
    <link rel="stylesheet" href="{{ base_url }}assets/vendor/pnotify/dist/pnotify.buttons.css" />
    <link rel="stylesheet" href="{{ base_url }}assets/vendor/pnotify/dist/pnotify.nonblock.css" />
    {% if mode == 'develop' %}
    <link rel="stylesheet" href="{{ base_url }}assets/fonts/fonts-ssp.css" />
    {% elseif mode == 'production' %}
    <!-- GOOGLE FONTS -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,900" />
    {% endif %}
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="{{ base_url }}assets/notika/css/login.css" />

    <!-- JavaScript -->
    <script src="{{ base_url }}assets/vendor/jquery/jquery.min.js"></script>
    {% if mode == 'develop' %}
    <script src="{{ base_url }}assets/scripts/base/sc_function.js?v={{jsver}}"></script>
    {% elseif mode == 'production' %}
    <script src="{{ base_url }}assets/scripts/base/sc_function.min.js"></script>
    {% endif %}
    <script>
        var SiteRoot = "{{ base_url ~ api_path }}/";
        var API_TOKEN = "{{ api_token }}";
        if (getKen = get_token(API_TOKEN)) {
            if (getKen.length > 5) {
                window.location.replace('./home');
            }
        }
    </script>
    <script src="{{ base_url }}assets/vendor/pnotify/dist/pnotify.js"></script>
    <script src="{{ base_url }}assets/vendor/pnotify/dist/pnotify.buttons.js"></script>
    <script src="{{ base_url }}assets/vendor/pnotify/dist/pnotify.nonblock.js"></script>
</head>

<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">
                <div class="auth-box ">
                    <div class="left">
                        <div class="content">
                            <div class="header">
                                <div style="display:inline-grid;" class="logo text-center">
                                    <img style="margin:0 auto 0 auto;"
                                        src="{{ base_url }}assets/notika/img/logo/login.png" alt="CBT Logo" width="64"
                                        height="64">
                                    <span style="font-size:16pt;font-weight:bold;margin-top:10px;">{{ app_name }} {{ app_version }}</span>
                                </div>
                            </div>
                            <form class="form-auth-small" action="index.php">
                                <div class="form-group">
                                    <label for="tx_username" class="control-label sr-only">Username</label>
                                    <input type="text" name="tx_username" class="form-control" id="tx_username"
                                        autocomplete="username" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <label for="tx_password" class="control-label sr-only">Password</label>
                                    <input name="tx_password" type="password" class="form-control" id="tx_password"
                                        autocomplete="current-password" placeholder="Password">
                                </div>

                                <button id="bt_login" type="button" class="btn btn-primary btn-lg btn-block">
                                    <span id="tx_spin">LOGIN</span>
                                </button>

                            </form>
                        </div>
                    </div>
                    <div class="right">
                        <div class="overlay"></div>
                        <div class="content text">
                            <h1 class="heading">
                                <b>W O R K&nbsp;&nbsp;H A R D</b>
                            </h1>
                            <p>
                                <b>A N Y W H E R E</b>
                            </p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
</body>
{% if mode == 'develop' %}
<script src="{{ base_url }}assets/scripts/page/login.js?v={{jsver}}"></script>
{% elseif mode == 'production'%}
<script src="{{ base_url }}assets/scripts/page/login.min.js"></script>
{% endif %}

</html>